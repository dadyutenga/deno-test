{
  "$schema": "https://deno.land/x/deno/deno.schema.json",
  "imports": {
    "@hono/zod-openapi": "npm:@hono/zod-openapi@0.12.0",
    "bcrypt": "npm:bcryptjs@2.4.3",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "dotenv": "https://deno.land/std@0.207.0/dotenv/mod.ts",
    "hono": "https://deno.land/x/hono@v3.11.5/mod.ts",
    "hono/middleware": "https://deno.land/x/hono@v3.11.5/middleware.ts",
    "postgres": "https://deno.land/x/postgres@v0.17.2/mod.ts",
    "postgres/connection": "https://deno.land/x/postgres@v0.17.2/connection.ts",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts"
  },
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read src/main.ts",
    "test": "deno test --allow-env --allow-net --allow-read --allow-write",
    "migrate:up": "deno run --allow-env --allow-net --allow-read --allow-write https://deno.land/x/nessie@2.0.10/cli.ts migrate",
    "migrate:down": "deno run --allow-env --allow-net --allow-read --allow-write https://deno.land/x/nessie@2.0.10/cli.ts rollback"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  }
}
